@model EmployeeRegister
@{
}

<h2 class="text-center mb-5">New Employee</h2>

<div class="container">
    <form asp-action="Create" method="post">
        <div class="form-group">
            <label for="EmployeeName">Name</label>
            <input type="text" class="form-control" id="EmployeeName" name="EmployeeName" value="@Model.EmployeeName" required/>
        </div>
        <div class="form-group">
            <label for="EmployeeEmail">Email</label>
            <input type="text" class="form-control" id="EmployeeEmail" name="EmployeeEmail" value="@Model.EmployeeEmail" required />
        </div>
        <div class="form-group">
            <label for="Password">Password</label>
            <input type="text" class="form-control" id="Password" name="Password" value="@Model.Password" required />
        </div>
        <div class="form-group">
            <label for="Address">Address</label>
            <textarea class="form-control" id="Address" name="Address" value="@Model.Address" required></textarea>
        </div>
        <button type="submit" class="btn btn-outline-primary btn-sm">Submit</button>
    </form>
</div>