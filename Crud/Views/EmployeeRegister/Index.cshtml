@model List<EmployeeRegister>

@{
 
}

<h2 class="text-center mb-5">List of Employees</h2>
<div class="row">
    <div class="col">
        <a class="btn btn-outline-primary" asp-controller="EmployeeRegister" asp-action="Create">New Employee</a>
    </div>
    <div class="col">
        
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Address</th>
            <th>Created On</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                <td>@employee.EmployeeId</td>
                <td>@employee.EmployeeName</td>
                <td>@employee.EmployeeEmail</td>
                <td>@employee.Address</td>
                <td>@employee.LastUpdate.ToString("yyyy-MM-dd")</td>
                    <td>
                    <a class="btn btn-primary btn-sm" asp-controller="EmployeeRegister" asp-action="Edit" asp-route-id="@employee.EmployeeId">Edit</a>
                    <a class="btn btn-danger btn-sm" asp-controller="EmployeeRegister" asp-action="Delete" asp-route-id="@employee.EmployeeId">Delete</a>
                    </td>
                </tr>    
            }
    </tbody>
</table>