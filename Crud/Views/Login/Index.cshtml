@model Login
@{
    ViewData["Title"] = "Login";
}

<h2 class="text-center mb-5">Login</h2>

<div class="container">
    <div class="card pt-2 pb-2 ps-3 pe-3">
        <div class="card-body">
            <form asp-action="Index" method="post" asp-controller="Login">

                @Html.AntiForgeryToken()

                <div class="form-group">
                    <label for="EmployeeEmail">Email</label>
                    <input type="text" class="form-control" id="EmployeeEmail" name="EmployeeEmail" required />
                    <span class="text-danger" asp-validation-for="EmployeeEmail"></span>
                </div>
                <div class="form-group">
                    <label for="Password">Password</label>
                    <input type="password" class="form-control" id="Password" name="Password"  required />
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>
                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="form-group">
                        <span class="text-danger">@ViewBag.ErrorMessage</span>
                    </div>
                }
                <button type="submit" class="btn btn-outline-primary btn-sm">Login</button>
            </form>
        </div>
    </div>
</div>
